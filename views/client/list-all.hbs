<h2>Lista klientów</h2>

<table>
	<thead>
		<tr>
			<th>
				E-mail:
			</th>
			<th>
				Imię:
			</th>
			<th>
				Data następnego kontaktu:
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{{#each clients}}
			<tr>
				<th>
					<a href='mailto:{{this.mail}}' target='_blank'>{{this.mail}}</a>
				</th>
				<td>
					<a href='/client/{{this.id}}'>{{this.name}}</a>
				</td>
				<td>
					{{this.nextContactAt}}
				</td>
				<td>
					<button>
						<a href='/client/{{this.id}}'>Szczegóły</a>
					</button>
					<form class="form-options-homepage" method='POST' action='/client/{{this.id}}?_method=DELETE'>
						<button type='submit'>Usuń</button>
					</form>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>

<div>
	<form method='GET' action='/client/form/add'>
		<button class="add-client-btn" type='submit'>Dodaj nowego klienta</button>
	</form>
</div>